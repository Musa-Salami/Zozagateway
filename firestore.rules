rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Products: anyone can read, anyone can write (no auth yet)
    match /products/{productId} {
      allow read, write: if true;
    }

    // Orders: anyone can read, anyone can write (no auth yet)
    match /orders/{orderId} {
      allow read, write: if true;
    }

    // Categories: anyone can read, anyone can write (no auth yet)
    match /categories/{categoryId} {
      allow read, write: if true;
    }

    // Reviews: anyone can read, anyone can write (no auth yet)
    match /reviews/{reviewId} {
      allow read, write: if true;
    }

    // Settings: anyone can read, anyone can write (no auth yet)
    match /settings/{settingId} {
      allow read, write: if true;
    }

    // Contact messages: anyone can write, admin can read
    match /contactMessages/{messageId} {
      allow read, write: if true;
    }
  }
}
